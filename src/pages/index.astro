---
import WelcomeLayout from "../layouts/WelcomeLayout.astro";
const base = import.meta.env.BASE_URL; // works locally & on GitHub Pages subpaths
---
<WelcomeLayout title="HoBB">
  <div class="page">
    <!-- Framed poster -->
    <div class="frame">
      <div class="frame-inner">
        <div class="content">
          <!-- LOGO -->
          <img
            class="logo-img"
            src={`${base}logo_noborders.png`}   /* /public/logo_noborders.png */
            alt="HoBB"
            decoding="async"
          />

          <!-- centered line -->
          <hr class="rule" />

          <!-- right-aligned taglines -->
          <div class="taglines">
            <p class="tagline de">Studenten-Wohngemeinschaften bei der FU</p>
            <p class="tagline en">Student Shared Apartments close to FU</p>
          </div>
        </div>
      </div>
    </div>

    <!-- centered, simple link BELOW the frame -->
    <a class="cta-out" href={`${base}home/`} aria-label="Enter HoBB">
      &gt; click here
    </a>
  </div>

  <style>
    /* page layout: frame + small spacer + link */
    .page {
      min-height: 100vh;
      display: grid;
      place-items: center;
      grid-template-rows: auto auto;
      row-gap: clamp(14px, 2.6vh, 28px);
      background: #000;
      color: #fff;
      font-family: ui-serif, "Playfair Display", Georgia, "Times New Roman", serif;
    }

    /* double-border frame, sized like the mock */
    .frame {
      width: min(92vw, 1100px);
      height: min(86vh, 640px);
      border: 3px solid #fff;            /* thin elegant border */
      display: grid;
      place-items: center;
    }
    .frame-inner {
      /* inner border inset to create the double frame */
      width: calc(100% - 26px);
      height: calc(100% - 26px);
      border: 3px solid #fff;
      display: grid;
      place-items: center;
    }

    .content {
      width: 100%;
      padding: 0 clamp(16px, 3vw, 40px);
      display: grid;
      justify-items: center;
      gap: clamp(0.9rem, 2.4vw, 1.6rem);
    }

    /* logo scales to fit the poster proportionally */
    .logo-img {
      max-width: min(78vw, 980px);
      max-height: min(36vh, 420px);
      width: auto;
      height: auto;
      object-fit: contain;
      display: block;
    }

    /* centered rule under the logo */
    .rule {
      width: min(82%, 820px);  /* a touch wider like the mock */
      height: 3px;
      background: #fff;
      border: 0;
      margin: 0 auto;          /* center horizontally */
    }

    /* right-aligned two-line tagline block */
    .taglines {
      width: min(82%, 820px);
      margin-inline: auto 0;   /* pin to right edge of this width */
      text-align: right;
    }
    .tagline {
      margin: .35rem 0;
      font-size: clamp(.92rem, 1.6vw, 1.06rem);
      opacity: .95;
      white-space: nowrap;
    }

    /* simple centered link below the frame (no box) */
    .cta-out {
      font-size: clamp(1rem, 1.8vw, 1.25rem);
      text-decoration: none;
      color: #fff;
      opacity: .95;
      border-bottom: 1px solid transparent;
      transition: opacity .2s ease, border-color .2s ease;
    }
    .cta-out:hover,
    .cta-out:focus-visible {
      opacity: 1;
      border-bottom-color: #fff;
      outline: none;
    }

    /* short screens (landscape phones, compact laptops) */
    @media (max-height: 560px) {
      .frame { height: 82vh; }
      .rule { height: 2px; }
      .logo-img { max-height: 32vh; }
    }
    @media (prefers-reduced-motion: reduce) {
      .cta-out { transition: none; }
    }
  </style>
</WelcomeLayout>
