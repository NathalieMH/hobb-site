---
import WelcomeLayout from "../layouts/WelcomeLayout.astro";
const base = import.meta.env.BASE_URL;
---
<WelcomeLayout title="HoBB">
  <div class="wrap">
    <div class="frame">
      <div class="frame-inner">
        <div class="content">
          <h1 class="logo">
            H<span class="small-o">o</span>BB
          </h1>

          <hr class="rule" />

          <p class="tagline de">Studenten-Wohngemeinschaften bei der FU</p>
          <p class="tagline en">Student Shared Apartments close to FU</p>
        </div>

        <a class="cta" href={`${base}home/`} aria-label="Enter HoBB">
          &gt; click here
        </a>
      </div>
    </div>
  </div>

  <style>
    .wrap {
      min-height: 100vh;
      display: grid;
      place-items: center;
      background: #000;
      color: #fff;
      font-family: ui-serif, "Playfair Display", Georgia, "Times New Roman", serif;
    }

    /* double border using two nested frames for pixel-perfect control */
    .frame {
      width: min(92vw, 1050px);
      height: min(86vh, 640px);
      border: 4px solid #fff;
      display: grid;
      place-items: center;
    }
    .frame-inner {
      width: calc(100% - 28px);
      height: calc(100% - 28px);
      border: 4px solid #fff;
      display: grid;
      grid-template-rows: 1fr auto;
    }

    .content {
      align-self: center;
      text-align: center;
      padding-inline: 2rem;
    }

    .logo {
      margin: 0;
      font-weight: 400;
      letter-spacing: .02em;
      font-size: clamp(3.5rem, 10vw, 11rem);
      line-height: 1;
    }
    .logo .small-o {
      font-size: .48em;              /* clearly smaller than the caps */
      display: inline-block;
      transform: translateY(.08em);  /* sit a touch lower, like the mock */
      font-weight: 400;
    }

    .rule {
      width: min(78%, 720px);
      border: none;
      height: 3px;
      background: #fff;
      margin: clamp(1.2rem, 3vw, 2rem) auto;
    }

    .tagline {
      margin: .35rem 0;
      font-size: clamp(.9rem, 1.6vw, 1.05rem);
      opacity: .95;
      white-space: nowrap;
    }

    .cta {
      justify-self: center;
      margin: 1.25rem 0 1.75rem;
      font-size: clamp(.95rem, 1.6vw, 1.1rem);
      text-decoration: none;
      border-bottom: 1px solid transparent;
      transition: border-color .2s ease, opacity .2s ease;
      opacity: .9;
    }
    .cta:hover,
    .cta:focus-visible {
      border-bottom-color: #fff;
      opacity: 1;
      outline: none;
    }

    /* keep things legible on very small heights */
    @media (max-height: 560px) {
      .frame { height: 82vh; }
      .rule { height: 2px; }
    }

    @media (prefers-reduced-motion: reduce) {
      .cta { transition: none; }
    }
  </style>
</WelcomeLayout>
