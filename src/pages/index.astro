---
import WelcomeLayout from "../layouts/WelcomeLayout.astro";
const base = import.meta.env.BASE_URL; // works locally & on GitHub Pages subpaths
---
<WelcomeLayout title="HoBB">
  <div class="page">
    <!-- Framed poster -->
    <div class="frame">
      <div class="frame-inner">
        <div class="content">
          <!-- LOGO -->
          <img
            class="logo-img"
            src={`${base}logo_noborders.png`}   /* /public/logo_noborders.png */
            alt="HoBB"
            decoding="async"
          />

          <!-- centered line -->
          <hr class="rule" />

          <!-- taglines: same width as the rule, centered block, text right-aligned -->
          <div class="taglines">
            <p class="tagline de">Studenten-Wohngemeinschaften bei der FU</p>
            <p class="tagline en">Student Shared Apartments close to FU</p>
          </div>
        </div>

        <!-- Elegant button (unchanged) -->
        <a class="cta" href={`${base}home/`} aria-label="Enter HoBB">
          enter HoBB
        </a>
      </div>
    </div>
  </div>

  <style>
    .page {
      min-height: 100vh;
      display: grid;
      place-items: center;
      background: #000;
      color: #fff;
      font-family: ui-serif, "Playfair Display", Georgia, "Times New Roman", serif;
    }

    /* double-border frame */
    .frame {
      width: min(92vw, 1100px);
      height: min(86vh, 640px);
      border: 3px solid #fff;
      display: grid;
      place-items: center;
    }
    .frame-inner {
      width: calc(100% - 26px);
      height: calc(100% - 26px);
      border: 3px solid #fff;
      display: grid;
      grid-template-rows: 1fr auto; /* content then button */
    }

    .content {
      align-self: center;
      width: 100%;
      padding: 0 clamp(16px, 3vw, 40px);
      display: grid;
      justify-items: center;
      gap: clamp(0.9rem, 2.4vw, 1.6rem);
    }

    /* Responsive logo fit */
    .logo-img {
      max-width: min(78vw, 980px);
      max-height: min(36vh, 420px);
      width: auto;
      height: auto;
      object-fit: contain;
      display: block;
    }

    /* Centered rule under logo */
    .rule {
      width: min(82%, 820px);
      height: 3px;
      background: #fff;
      border: 0;
      margin: 0 auto; /* centered */
    }

    /* IMPORTANT: taglines share width AND centering with the rule.
       This makes the taglines' right edge align with the rule's right edge. */
    .taglines {
      width: min(82%, 820px);
      margin: 0 auto;     /* center the block, same as .rule */
      text-align: right;  /* right-align within that centered block */
    }
    .tagline {
      margin: .35rem 0;
      font-size: clamp(.92rem, 1.6vw, 1.06rem);
      opacity: .95;
      white-space: nowrap;
    }

    /* Elegant outlined CTA button (unchanged) */
    .cta {
      justify-self: center;
      margin: 1.25rem 0 1.75rem;
      font-size: clamp(.95rem, 1.6vw, 1.1rem);
      text-decoration: none;
      padding: .65rem 1.1rem;
      border: 2px solid #fff;
      border-radius: 4px;
      display: inline-block;
      color: #fff;
      background: transparent;
      transition: background-color .2s ease, color .2s ease, opacity .2s ease;
    }
    .cta:hover,
    .cta:focus-visible {
      background: #fff;
      color: #000;
      outline: none;
    }

    /* Small/short screens */
    @media (max-height: 560px) {
      .frame { height: 82vh; }
      .rule { height: 2px; }
      .logo-img { max-height: 32vh; }
    }
    @media (prefers-reduced-motion: reduce) {
      .cta { transition: none; }
    }
  </style>
</WelcomeLayout>
