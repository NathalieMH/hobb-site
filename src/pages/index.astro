---
import WelcomeLayout from "../layouts/WelcomeLayout.astro";
const base = import.meta.env.BASE_URL; // works locally & on GitHub Pages subpaths
---
<WelcomeLayout title="HoBB">
  <div class="page">
    <div class="frame">
      <div class="frame-inner">
        <!-- top spacer establishes the top/side/bottom gutter -->
        <div class="top-pad" />

        <!-- main content -->
        <div class="content">
          <!-- LOGO (80% of previous size) -->
          <img
            class="logo-img"
            src={`${base}logo_noborders.png`}
            alt="HoBB"
            decoding="async"
          />

          <!-- centered line -->
          <hr class="rule" />

          <!-- taglines: same width & centering as the rule; text right-aligned -->
          <div class="taglines">
            <p class="tagline de">Studenten-Wohngemeinschaften bei der FU</p>
            <p class="tagline en">Student Shared Apartments close to FU</p>
          </div>
        </div>

        <!-- bottom gutter that matches the top gutter; button sits inside it -->
        <div class="bottom-pad">
          <a class="cta" href={`${base}home/`} aria-label="Enter HoBB">
            enter HoBB
          </a>
        </div>
      </div>
    </div>
  </div>

  <style>
    .page {
      min-height: 100vh;
      display: grid;
      place-items: center;
      background: #000;
      color: #fff;
      font-family: ui-serif, "Playfair Display", Georgia, "Times New Roman", serif;
    }

    /* outer/inner double frame */
    .frame {
      width: min(92vw, 1100px);
      height: min(86vh, 640px);
      border: 3px solid #fff;
      display: grid;
      place-items: center;
    }

    /* GUTTER SYSTEM:
       - left/right padding = --gutter
       - top = first row (var(--gutter))
       - bottom = last row (var(--gutter)) where the button lives
    */
    .frame-inner {
      --gutter: clamp(24px, 5vw, 56px);
      width: calc(100% - 26px);
      height: calc(100% - 26px);
      border: 3px solid #fff;
      display: grid;
      grid-template-rows: var(--gutter) 1fr var(--gutter);
      padding-inline: var(--gutter);
    }

    .top-pad { /* empty spacer to enforce top gutter */ }
    .bottom-pad {
      display: grid;
      place-items: center; /* centers the button inside the bottom gutter */
    }

    /* main content area */
    .content {
      width: 100%;
      display: grid;
      justify-items: center;
      gap: clamp(0.9rem, 2.4vw, 1.6rem);
    }

    /* LOGO at 80% of the previous caps */
    /* (previous: max-width: 78vw/980px; max-height: 36vh/420px) */
    .logo-img {
      max-width: min(62.4vw, 784px);  /* 80% of 78vw / 980px */
      max-height: min(28.8vh, 336px); /* 80% of 36vh / 420px */
      width: auto;
      height: auto;
      object-fit: contain;
      display: block;
    }

    /* Centered rule under logo */
    .rule {
      width: min(82%, 820px);
      height: 3px;
      background: #fff;
      border: 0;
      margin: 0 auto; /* centered */
    }

    /* Taglines share the same width & centering as the rule, text right-aligned.
       => Right edge of text aligns exactly with the right edge of the line. */
    .taglines {
      width: min(82%, 820px);
      margin: 0 auto;
      text-align: right;
    }
    .tagline {
      margin: .35rem 0;
      font-size: clamp(.92rem, 1.6vw, 1.06rem);
      opacity: .95;
      white-space: nowrap;
    }

    /* Elegant outlined CTA button (unchanged behavior) */
    .cta {
      font-size: clamp(.95rem, 1.6vw, 1.1rem);
      text-decoration: none;
      padding: .65rem 1.1rem;
      border: 2px solid #fff;
      border-radius: 4px;
      display: inline-block;
      color: #fff;
      background: transparent;
      transition: background-color .2s ease, color .2s ease, opacity .2s ease;
    }
    .cta:hover,
    .cta:focus-visible {
      background: #fff;
      color: #000;
      outline: none;
    }

    /* short screens */
    @media (max-height: 560px) {
      .frame { height: 82vh; }
      .rule { height: 2px; }
      .logo-img {
        max-height: min(26vh, 300px); /* keep headroom on very short viewports */
      }
    }
    @media (prefers-reduced-motion: reduce) {
      .cta { transition: none; }
    }
  </style>
</WelcomeLayout>
