---
import WelcomeLayout from "../layouts/WelcomeLayout.astro";
const base = import.meta.env.BASE_URL; // works on GitHub Pages subpaths too
---
<WelcomeLayout title="HoBB">
  <div class="wrap">
    <div class="frame">
      <div class="frame-inner">
        <div class="content">
          <!-- LOGO image -->
          <img
            class="logo-img"
            src={`${base}logo.png`}        /* uses /public/logo.png */
            alt="HoBB"
            decoding="async"
          />

          <hr class="rule" />

          <!-- Right-aligned taglines -->
          <div class="taglines">
            <p class="tagline de">Studenten-Wohngemeinschaften bei der FU</p>
            <p class="tagline en">Student Shared Apartments close to FU</p>
          </div>
        </div>

        <!-- Elegant bordered button -->
        <a class="cta" href={`${base}home/`} aria-label="Enter HoBB">
          enter HoBB
        </a>
      </div>
    </div>
  </div>

  <style>
    .wrap {
      min-height: 100vh;
      display: grid;
      place-items: center;
      background: #000;
      color: #fff;
      font-family: ui-serif, "Playfair Display", Georgia, "Times New Roman", serif;
    }

    /* double border frame */
    .frame {
      width: min(92vw, 1050px);
      height: min(86vh, 640px);
      border: 4px solid #fff;
      display: grid;
      place-items: center;
    }
    .frame-inner {
      width: calc(100% - 28px);
      height: calc(100% - 28px);
      border: 4px solid #fff;
      display: grid;
      grid-template-rows: 1fr auto;
    }

    .content {
      align-self: center;
      padding: 0 2rem;
      display: grid;
      justify-items: center;
      gap: clamp(0.8rem, 2.2vw, 1.5rem);
    }

    /* Responsive logo sizing
       - scales with viewport but never overflows the frame
       - respects both width and height so it "fits the poster" */
    .logo-img {
      max-width: min(78vw, 980px);
      max-height: min(36vh, 420px);
      width: auto;
      height: auto;
      object-fit: contain;
      display: block;
    }

    .rule {
      width: min(78%, 720px);
      height: 3px;
      background: #fff;
      border: 0;
      margin: 0;
      margin-inline: auto 0; /* make the line align to the right edge */
    }

    .taglines {
      width: min(78%, 720px);
      margin-inline: auto 0;  /* right align block */
      text-align: right;      /* right align text */
    }
    .tagline {
      margin: .35rem 0;
      font-size: clamp(.9rem, 1.6vw, 1.05rem);
      opacity: .95;
      white-space: nowrap;
    }

    .cta {
      justify-self: center;
      margin: 1.25rem 0 1.75rem;
      font-size: clamp(0.95rem, 1.6vw, 1.1rem);
      text-decoration: none;
      padding: .65rem 1.1rem;
      border: 2px solid #fff;
      border-radius: 4px;
      display: inline-block;
      transition: background-color .2s ease, color .2s ease, opacity .2s ease;
      color: #fff;
      background: transparent;
    }
    .cta:hover,
    .cta:focus-visible {
      background: #fff;
      color: #000;
      outline: none;
    }

    /* small/short screens */
    @media (max-height: 560px) {
      .frame { height: 82vh; }
      .rule { height: 2px; }
      .logo-img { max-height: 32vh; }
    }
    @media (prefers-reduced-motion: reduce) {
      .cta { transition: none; }
    }
  </style>
</WelcomeLayout>
