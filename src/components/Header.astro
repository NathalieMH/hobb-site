---
const base = import.meta.env.BASE_URL;
---

<header class="top-banner">
  <!-- Centered logo -->
  <div class="logo">
    <a href={`${base}home/`}>
      <img src={`${base}logo.png`} alt="HoBB Logo" height="60" />
    </a>
  </div>

  <!-- Accessible hamburger -->
  <button id="menu-toggle" class="menu-btn" aria-label="Menü öffnen" aria-expanded="false">
    <span></span><span></span><span></span>
  </button>

  <nav class="main-nav" id="site-nav">
    <a href={`${base}home/`}>Home</a>
    <a href={`${base}wohngemeinschaften/`}>die Wohngemeinschaften</a>
    <a href={`${base}lage/`}>die Lage</a>
    <a href={`${base}haus/`}>das Haus</a>
    <a href={`${base}impressum-kontakt/`}>Impressum/Kontakt</a>
  </nav>
</header>

<style>
/* Header layout: grid gives a true centered logo */
.top-banner{
  background:#fff; color:#111;
  display:grid; grid-template-columns: 1fr auto 1fr;
  align-items:center;
  padding:.75rem 1rem;
  position:relative;
  border-bottom:1px solid #000; /* elegant black bottom line */
}

/* Put logo in the middle column, button on the right */
.logo{ grid-column:2; justify-self:center; }
.menu-btn{ grid-column:3; justify-self:end; }

/* Dropdown nav (hidden by default) */
.main-nav{
  display:none;
  position:absolute; top:100%; right:0; left:auto;
  background:#fff;
  flex-direction:column; gap:1rem;
  padding:1rem 1.25rem; min-width:240px;
  border:1px solid #000; border-top:none; /* align with header line */
  box-shadow:0 10px 18px rgba(0,0,0,.06);
}
.main-nav a{ color:#111; text-decoration:none; font-size:.95rem; }
.main-nav a:hover{ text-decoration:underline; }
.main-nav.open{ display:flex; }

/* Hamburger: three bars (now black to match white header) */
.menu-btn{
  width:36px; height:28px; padding:0; border:0; background:none; cursor:pointer;
  display:flex; flex-direction:column; justify-content:space-between; align-items:stretch;
}
.menu-btn span{ height:2px; background:#111; border-radius:2px; display:block; }

/* Optional: show the nav inline on wide screens
@media (min-width: 900px){
  .main-nav{ position:static; display:flex; flex-direction:row; gap:1.5rem; padding:0; border:0; box-shadow:none; }
}
*/
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const btn = document.getElementById("menu-toggle");
    const nav = document.getElementById("site-nav");
    btn.addEventListener("click", () => {
      const open = nav.classList.toggle("open");
      btn.setAttribute("aria-expanded", open ? "true" : "false");
    });
  });
</script>
