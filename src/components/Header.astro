---
const base = import.meta.env.BASE_URL;
let isMenuOpen = false;
---

<header class="top-banner">
  <div class="logo">
    <a href={`${base}`}>
      <img src={`${base}logo.png`} alt="HoBB Logo" height="60" />
    </a>
  </div>

  <button id="menu-toggle" aria-label="Toggle menu" class="menu-btn">
    â˜°
  </button>

  <nav class="main-nav">
    <a href={`${base}wohngemeinschaften/`}>die Wohngemeinschaften</a>
    <a href={`${base}lage/`}>die Lage</a>
    <a href={`${base}haus/`}>das Haus</a>
    <a href={`${base}impressum-kontakt/`}>Impressum/Kontakt</a>
  </nav>
</header>

<style>
.top-banner {
  background: black;
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem 2rem;
}

.main-nav {
  display: flex;
  gap: 1.5rem;
}

.main-nav a {
  color: white;
  text-decoration: none;
  font-size: 0.9rem;
}

.main-nav a:hover {
  text-decoration: underline;
}

/* The hamburger button */
.menu-btn {
  background: none;
  border: none;
  color: white;
  font-size: 1.75rem;
  display: none; /* hidden on desktop */
  cursor: pointer;
}

/* Responsive: show hamburger, hide nav */
@media (max-width: 768px) {
  .menu-btn {
    display: block;
  }

  .main-nav {
    display: none;
    position: absolute;
    top: 70px;
    right: 0;
    background: black;
    flex-direction: column;
    padding: 1rem;
    width: 100%;
  }

  .main-nav.open {
    display: flex;
  }
}
</style>

<script>
  // Small vanilla JS for the toggle
  document.addEventListener("DOMContentLoaded", () => {
    const btn = document.getElementById("menu-toggle");
    const nav = document.querySelector(".main-nav");
    btn.addEventListener("click", () => {
      nav.classList.toggle("open");
    });
  });
</script>
