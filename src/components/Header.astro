---
const base = import.meta.env.BASE_URL;
---

<header class="top-banner">
  <div class="logo">
    <a href={`${base}home/`}>
      <img src={`${base}logo.png`} alt="HoBB Logo" height="60" />
    </a>
  </div>

  <!-- Accessible hamburger -->
  <button id="menu-toggle" class="menu-btn" aria-label="Menü öffnen" aria-expanded="false">
    <span></span><span></span><span></span>
  </button>

  <nav class="main-nav" id="site-nav">
    <a href={`${base}home/`}>Home</a>
    <a href={`${base}wohngemeinschaften/`}>die Wohngemeinschaften</a>
    <a href={`${base}lage/`}>die Lage</a>
    <a href={`${base}haus/`}>das Haus</a>
    <a href={`${base}impressum-kontakt/`}>Impressum/Kontakt</a>
  </nav>

</header>

<style>
/* Banner */
.top-banner{
  background:#000;color:#fff;display:flex;align-items:center;justify-content:space-between;
  padding:1rem 2rem;position:relative
}

/* Nav is hidden by default; opens as a dropdown */
.main-nav{
  display:none;position:absolute;top:72px;right:0;left:auto;background:#000;
  flex-direction:column;gap:1rem;padding:1rem 1.25rem;min-width:240px;border-left:1px solid #222;border-bottom:1px solid #222
}
.main-nav a{color:#fff;text-decoration:none;font-size:0.95rem}
.main-nav a:hover{text-decoration:underline}
.main-nav.open{display:flex}

/* Hamburger: three consistent bars */
.menu-btn{
  width:36px;height:28px;padding:0;border:0;background:none;cursor:pointer;display:flex;
  flex-direction:column;justify-content:space-between;align-items:stretch
}
.menu-btn span{
  height:2px;background:#fff;border-radius:2px;display:block
}

/* If you want the nav visible on wide screens as a row, uncomment this:
@media (min-width: 900px){
  .main-nav{position:static;display:flex;flex-direction:row;gap:1.5rem;padding:0;border:0}
}
*/
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const btn = document.getElementById("menu-toggle");
    const nav = document.getElementById("site-nav");
    btn.addEventListener("click", () => {
      const open = nav.classList.toggle("open");
      btn.setAttribute("aria-expanded", open ? "true" : "false");
    });
  });
</script>
