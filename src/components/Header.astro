---
const base = import.meta.env.BASE_URL;
---
<header class="top-banner">
  <div class="logo">
    <a href={`${base}`}>
      <img src={`${base}logo.svg`} alt="HoBB Logo" height="60" />
    </a>
  </div>

  <nav class="main-nav">
    <a href={`${base}wohngemeinschaften/`}>die Wohngemeinschaften</a>
    <a href={`${base}lage/`}>die Lage</a>
    <a href={`${base}haus/`}>das Haus</a>
    <a href={`${base}impressum-kontakt/`}>Impressum/Kontakt</a>
  </nav>
</header>

<style>
.top-banner {
  background: black;
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem 2rem;
}

.main-nav a {
  color: white;
  margin-left: 1.5rem;
  text-decoration: none;
  font-size: 0.9rem;
}

.main-nav a:hover {
  text-decoration: underline;
}

.logo img {
  display: block;
}
</style>
